@model AspNetCoreCrud.Models.Caminhao

@{
	ViewData["Title"] = "Deseja Deletar Cadastro do caminhão ?";
}

<h1>@ViewData["Title"]</h1>

<div>
	
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Marca)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Marca)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Modelo)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Modelo)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Placa)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Placa)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Eixo)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Eixo)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Motorista)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Motorista.PrimeiroNome)
		</dd>
	</dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Delete" class="btn btn-danger" />
		<a class="btn btn-info" asp-action="Index">Voltar Para Lista</a>
	</form>
</div>
