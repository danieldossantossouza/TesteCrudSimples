@model AspNetCoreCrud.Models.Motorista

@{
	ViewData["Title"] = "Deseja Deletar o Motorista ?";
}

<h1>@ViewData["Title"]</h1>


<div>

	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.PrimeiroNome)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.PrimeiroNome)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.SegundoNome)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.SegundoNome)
		</dd>
	</dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Delete" class="btn btn-danger" />
		<a class="btn btn-info" asp-action="Index">Voltar Para Lista</a>
	</form>
</div>
